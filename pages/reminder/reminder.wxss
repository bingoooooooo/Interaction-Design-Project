.page {
  background-image: linear-gradient(180deg, #f8bc68bf 0%, #fedf719e 24.6%, #f49512bf 100%);
  width: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  height: 100%;
}
.color-red{
  color: red;
}
.color-gray{
  color: gray;
